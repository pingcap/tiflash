# Preparation.
mysql> drop table if exists test.t
mysql> create table test.t (a int, b int)
mysql> alter table test.t set tiflash replica 1
mysql> insert into test.t (col) values (1);

func> wait_table test t

mysql> use test; set @@tidb_allow_mpp=0; set @@tidb_allow_tiflash_cop=true; set @@tidb_allow_batch_cop=2; set @@tidb_isolation_read_engines='tiflash'; set @@tidb_enforce_mpp=1; select * from t order by col limit 10;

mysql> use test; set @@tidb_allow_mpp=1; set @@tidb_enforce_mapp=1; set @@tidb_isolation_read_engines='tiflash'; set @@tidb_enforce_mpp=1; select * from t order by col limit 10;
