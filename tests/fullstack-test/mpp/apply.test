func> wait_table test t

mysql> use test; set @@tidb_enable_parallel_apply=0; set @@tidb_isolation_read_engines='tiflash'; set @@tidb_enforce_mpp=1; select count(*) from t where a > (select avg(b) from t t1 where t.a > t1.a);
