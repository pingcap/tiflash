mysql> drop table if exists test.t
mysql> create table test.t(a json)
mysql> alter table test.t set tiflash replica 1
mysql> insert into test.t values(null)
mysql> insert into test.t values('[1,2]')
mysql> insert into test.t values('{\"a\":\"b\"}') #NO_UNESCAPE 
mysql> insert into test.t values(3.01)
mysql> insert into test.t values('\"2020-01-02\"') #NO_UNESCAPE 

func> wait_table test t

mysql> set tidb_enforce_mpp=1; select cast(a as char) from test.t;
+-----------------+
| cast(a as char) |
+-----------------+
| NULL            |
| [1, 2]          |
| {"a": "b"}      |
| 3.01            |
| "2020-01-02"    |
+-----------------+

mysql> set tidb_enforce_mpp=1; select cast(a as char(3)) from test.t;
+--------------------+
| cast(a as char(3)) |
+--------------------+
| NULL               |
| [1,                |
| {"a                |
| 3.0                |
| "20                |
+--------------------+

mysql> set tidb_enforce_mpp=1; select cast(a as char(30)) as col from test.t;
+--------------+
| col          |
+--------------+
| NULL         |
| [1, 2]       |
| {"a": "b"}   |
| 3.01         |
| "2020-01-02" |
+--------------+

mysql> set tidb_enforce_mpp=1; select char_length(cast(a as char(0))) as col from test.t;
+------+
| col  |
+------+
| NULL |
|    0 |
|    0 |
|    0 |
|    0 |
+------+

mysql> drop table if exists test.t