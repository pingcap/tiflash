mysql> drop table if exists test.t;
mysql> create table if not exists test.t(a int, b double, c decimal(5, 2), d bigint);

mysql> insert into test.t values(12345, 123.45, 123.45, 0x7FFFFFFFFFFFFFFF);
mysql> insert into test.t values(12345, NULL, -123.45, 0x7FFFFFFFFFFFFFFF);
mysql> alter table test.t set tiflash replica 1;
func> wait_table test t

mysql> set tidb_enforce_mpp=1; set tidb_isolation_read_engines='tiflash'; select hex(a), hex(b), hex(c), hex(d) from test.t;
