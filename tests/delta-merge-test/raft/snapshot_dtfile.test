=> drop table if exists default.test
=> DBGInvoke __mock_tidb_table(default, test, 'col_1 Int64', '', 'dt')
=> DBGInvoke __refresh_schemas()
=> DBGInvoke __region_snapshot(4, 0, 10000, default, test)
